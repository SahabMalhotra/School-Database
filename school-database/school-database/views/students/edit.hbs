<h2 class="mb-4">Edit Student</h2>

<form method="POST" action="/students/edit/{{student._id}}" class="card p-4 shadow-sm bg-light">
  <div class="mb-3">
    <label class="form-label">Student Name</label>
    <input type="text" name="name" class="form-control" value="{{student.name}}" required />
  </div>

  <div class="mb-3">
    <label class="form-label">Student Email</label>
    <input type="email" name="email" class="form-control" value="{{student.email}}" required />
  </div>

  <div class="mb-3">
  <label for="course" class="form-label">Select Course</label>
  <select name="course" id="course" class="form-select" required>
    {{#each courses}}
      <option value="{{this._id}}" {{isSelected this._id ../student.course}}>{{this.title}}</option>
    {{/each}}
  </select>
</div>


  <div class="mb-3">
    <label class="form-label">Marks</label>
    <input type="number" name="marks" class="form-control" value="{{student.marks}}" required />
  </div>

  <button type="submit" class="btn btn-success">Update Student</button>
</form>
<div class="mt-4">
  <a href="/" class="btn btn-secondary me-2">🏠 Back to Homepage</a>
  <a href="javascript:history.back()" class="btn btn-outline-dark">🔙 Back</a>
</div>