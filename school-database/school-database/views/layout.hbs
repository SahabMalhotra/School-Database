<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>School Portal</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">School Portal</a>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a
              class="nav-link"
              href="/students"
            >Students</a></li>
          <li class="nav-item"><a
              class="nav-link"
              href="/students/add"
            >Register</a></li>
          {{#if user}}
            <li class="nav-item"><a
                class="nav-link"
                href="/logout"
              >Logout</a></li>
          {{else}}
            <li class="nav-item"><a
                class="nav-link"
                href="/login"
              >Login</a></li>
          {{/if}}
        </ul>
      </div>
    </nav>

    <div class="container mt-4">
      {{#if success}}<div class="alert alert-success">{{success}}</div>{{/if}}
      {{#if error}}<div class="alert alert-danger">{{error}}</div>{{/if}}
      {{{body}}}
    </div>

    <footer class="text-center py-4 mt-5 text-muted small">
      &copy;
      {{year}}
      School Portal. All rights reserved.
    </footer>
  </body>
</html>